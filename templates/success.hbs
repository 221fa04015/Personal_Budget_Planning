<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="refresh" content="10;url=/login"> <!-- Automatic redirect after 10 seconds -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Successful</title>
    <link rel="stylesheet" href="./assests/css/style.css">
    <script>
        // Countdown Timer
        let timeLeft = 10;
        const countdownElement = document.getElementById('countdown');

        const countdown = setInterval(() => {
            if (timeLeft <= 0) {
                clearInterval(countdown);
            } else {
                countdownElement.innerHTML = timeLeft + " seconds remaining";
                timeLeft -= 1;
            }
        }, 1000);
    </script>
</head>
<body>
  <div id="header"></div>
    <div class="card success-card">
        <h2>Signup Successful, {{userName}}!</h2>
        <p>You will be redirected to the login page in <span id="countdown">10 seconds</span>.</p>

        <!-- Button to go to Home Page -->
        <a href="/" class="btn">Go to Home</a>
    </div>
    <div id="footer"></div>
  <script src="./assests/js/Script.js"></script>
</body>
</html>
